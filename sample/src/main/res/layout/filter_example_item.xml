<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/filter_example_item_height"
    android:layout_margin="@dimen/filter_example_item_margin">


    <TextView
        android:id="@+id/filter_example_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/filter_example_item_margin_horizontal"
        />


    <TextView
        android:id="@+id/filter_example_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/filter_example_item_margin_horizontal"/>


</android.support.v7.widget.CardView>